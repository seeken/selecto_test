<.container max_width="full">
  <button phx-click="toggle_show_view">Toggle View Controller</button>
  <div :if={@show_view}>
    <.live_component
      module={ListableComponentsPetal.ViewSelector}
      id="config"
      active_tab={@active_tab}
      view_mode={@view_mode}
      group_by={@group_by}
      order_by={@order_by}
      selected={@selected}
      aggregate={@aggregate}
      listable={@listable}
      filters={@filters}
    />
  </div>

  <.live_component module={ListableComponentsPetal.Results} id="results" listable={@listable} />
</.container>
